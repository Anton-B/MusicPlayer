<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        xmlns:MusicPlayerAPI="clr-namespace:MusicPlayerAPI;assembly=MusicPlayerAPI" x:Name="mainWindow" x:Class="MusicPlayer.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Background="White" WindowStartupLocation="CenterScreen" Width="1018" Height="612">
    <DockPanel x:Name="mainDockPanel" LastChildFill="True">
        <DockPanel x:Name="playerDockPanel" DockPanel.Dock="Bottom" LastChildFill="True" Height="82" Background="#FF7E8EA4">
            <StackPanel x:Name="infoStackPanel" DockPanel.Dock="Top" Orientation="Horizontal" Height="32">
                <Label x:Name="labelArtist" Padding="0,2,0,5" Content="Artist" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" FontSize="18.667" Foreground="White"/>
                <Label x:Name="labelTitle" Padding="0,4,0,5" Content="-  Title" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
            </StackPanel>
            <DockPanel x:Name="controlsDockPanel" DockPanel.Dock="Bottom" LastChildFill="True">
                <Button x:Name="btPrev" DockPanel.Dock="Left" Content="Prev" HorizontalAlignment="Left" Margin="10,10,0,10"
    		            VerticalAlignment="Top" Width="30" Height="30" Click="btPrev_Click"/>
                <Button x:Name="btPlayPause" DockPanel.Dock="Left" Content="Play" HorizontalAlignment="Left" Margin="10,10,0,10" 
    		            VerticalAlignment="Top" Width="30" Height="30" Click="btPlayPause_Click" Background="#FFDDDDDD"/>
                <Button x:Name="btNext" DockPanel.Dock="Left" Content="Next" HorizontalAlignment="Left" Margin="10,10,0,10" 
    		            VerticalAlignment="Top" Width="30" Height="30" Click="btNext_Click"/>
                <Button x:Name="btRand" DockPanel.Dock="Left" Content="-Rand" HorizontalAlignment="Left" Margin="10,10,0,10" 
                        VerticalAlignment="Top" Width="30" Height="30" Click="btRand_Click"/>
                <Button x:Name="btRepeat" DockPanel.Dock="Left" Content="-Rep" HorizontalAlignment="Left" Margin="10,10,0,10" 
                        VerticalAlignment="Top" Width="30" Height="30" Click="btRepeat_Click"/>
                <Slider x:Name="volumeSlider" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="10,17,10,10" ValueChanged="VolumeSlider_ValueChanged"
    		            VerticalAlignment="Top" Width="80" Value="1" Maximum="1" LargeChange="0.1" IsMoveToPointEnabled="True"/>
                <Label x:Name="labelMaxTimelinePos" DockPanel.Dock="Right" Content="00:00" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="0,13,0,10" Foreground="White"/>
                <Label x:Name="labelSlash" Content="/" DockPanel.Dock="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Margin="0,13,0,10" Foreground="White"/>
                <Label x:Name="labelCurrTimelinePos" DockPanel.Dock="Right" Content="00:00" HorizontalAlignment="Left" VerticalAlignment="Top" Width="38" Margin="0,13,0,10" Foreground="White"/>
                <Slider  x:Name="musicTimelineSlider" ValueChanged="SetMediaPosition" SmallChange="1" IsMoveToPointEnabled="True" Margin="10,17,0,10"/>
            </DockPanel>
        </DockPanel>
        <MediaElement x:Name="mediaElement" HorizontalAlignment="Left" Height="49" Margin="-54,500,0,-48" MediaEnded="MediaElement_MediaEnded"
    		        VerticalAlignment="Top" Width="38" UnloadedBehavior="Manual" Stretch="Fill" Volume="1" MediaOpened="MediaElement_MediaOpened" LoadedBehavior="Manual"/>
        <TabControl x:Name="tabControl" Height="{Binding ActualHeight, ElementName=songsDataGrid, Mode=OneWay}" DockPanel.Dock="Left" VerticalAlignment="Top" Width="549" BorderBrush="{x:Null}" Background="#FFB4DEFB">
            <TabItem x:Name="compTabItem" Header="TabItem">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>
        <DataGrid x:Name="songsDataGrid" Margin="0,0,0,0" SelectionChanged="songsDataGrid_SelectionChanged"
    		      IsSynchronizedWithCurrentItem="True" RowHeight="30" CanUserResizeColumns="False" CanUserReorderColumns="False" 
                  Focusable="False" HeadersVisibility="None" SelectionMode="Single" CanUserResizeRows="False" IsHitTestVisible="True" 
                  BorderBrush="{x:Null}" Background="{x:Null}" CanUserSortColumns="False" FrozenColumnCount="3" HorizontalScrollBarVisibility="Hidden"
                  GridLinesVisibility="None" ColumnWidth="60" RowDetailsVisibilityMode="Visible" IsReadOnly="True">
            <DataGrid.AlternatingRowBackground>
                <SolidColorBrush Color="#FFB4DEFB" Opacity="0.3"/>
            </DataGrid.AlternatingRowBackground>
        </DataGrid>
    </DockPanel>
</Window>
